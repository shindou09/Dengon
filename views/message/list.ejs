<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>无标题文档</title>
    <link href="/css/liuyan.css" rel="stylesheet" type="text/css" />
</head>

<body>
<%if(list){%>
<% list.forEach(function(message){ %>
<table width="980" border="0" align="center" cellpadding="0" cellspacing="0" bgcolor="#fff">
    <tr class="ly_up">
        <td align="left" valign="middle"><div class="ly_que_tit">
            问题：<%=message.title%></div><div class="ly_que_time">名称：<%=message.name%>  | 发布时间：<%=moment(message.date).format('YYYY-MM-DD HH:mm')%></div>
            <div class="ly_que_txt"><%=message.contents%></div></td>
    </tr>
    <%if (message.isReply) {%>
    <tr class="ly_down">
        <td align="left" valign="middle"><div class="ly_aus_tit">您的回复信息</div><div class="ly_aus_time">回复时间：<%=moment(message.reply.date).format('YYYY-MM-DD HH:mm')%></div>
            <div class="ly_aus_txt"><%=message.reply.contents%></div></td>
    </tr>
    <%}%>
</table>
<%});%>
<table align="center" width="100" cellspacing="0" cellpadding="0" bgcolor="#fff">
    <tr align="center">
        <td width="50"><a <%if(isPrePage){%>href="/site/<%=siteId%>/message/list/<%=(currentPage - 1)%>"<%}%>>上一页</a></td>
        <td width="50"><a <%if(isNextPage){%>href="/site/<%=siteId%>/message/list/<%=(currentPage + 1)%>"<%}%>>下一页</a></td>
    </tr>
</table>
<%}%>

</body>
</html>
