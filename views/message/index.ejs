<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <title>留言</title>
    <link href="/fontPage/css/index.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/fontPage/css/uniform.default.css" type="text/css" media="screen"/>
    <script src="/fontPage/js/jquery.min.js" type="text/javascript"></script>
    <script src="/fontPage/jquery.uniform.min.js" type="text/javascript"></script>
    <script language="javascript" type="text/javascript" src="/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript">
        $(function(){
            $("input, textarea, select, button").uniform();
        });
    </script>

    <style type="text/css" media="screen">
        body {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            color: #666;

        }

        label {
            font-size: 10px;
            font-weight: bold;
            text-transform: uppercase;
            display: block;
            margin-bottom: 3px;
            clear: both;
        }
    </style>

    <!-- 获取Ip地址 -->
    <script language="JavaScript">
        VIH_DisplayOnPage = "no";
    </script>
    <script language="JavaScript" src="http://scripts.hashemian.com/js/visitorIPHOST.js.php"></script>

    <script type="text/javascript">
        var ipAddress=VIH_HostIP;
        function submitData()
        {
            //alert(ipAddress);
            var userName=$('#userName').val();
            var userPhone=$('#phone').val();
            var title=$("#title").val();
            var contents=$("#contents").attr("value");
            var date=$('#date').val();
            var email=$('#email').val();
            var okName="0";
            var okTel="0";
            var okEmail="0";
            var okDate="0";
            if(userName==""||userName==null)
            {
                document.getElementById("nameTs").innerHTML="<font style='color: red;'>姓名不能为空！</font>";
            }else
            {
                var reg = /^[\u4e00-\u9fa5]+$/i;
                if (!reg.test(userName))
                {
                    document.getElementById("nameTs").innerHTML="<font style='color: red;'>姓名只能为汉字！</font>";
                    return false;
                }else
                {
                    document.getElementById("nameTs").innerHTML="";
                    okName="1";
                }
            }
            if(userPhone==""||userPhone==null)
            {
                document.getElementById("phones").innerHTML="<font style='color: red;'>手机号不能为空！</font>";
            }else
            {
                reg=/^1[3458]\d{9}$/;
                if(!reg.test(userPhone)){
                    document.getElementById("phones").innerHTML="<font style='color: red;'>手机号码不正确！</font>";
                    return false;
                }else{
                    document.getElementById("phones").innerHTML="";
                    okTel="1";
                }
            }
            if (email==""||email==null) {
                document.getElementById("emails").innerHTML="<font style='color: red;'>联系邮箱不能为空！</font>";
            }else{
                reg = /^(\w)+(\.\w+)*@(\w)+((\.\w+)+)$/;
                if(!reg.test(email)){
                    document.getElementById("emails").innerHTML="<font style='color: red;'>邮箱地址不正确！</font>";
                    return false;
                }else{
                    document.getElementById("emails").innerHTML="";
                    okEmail="1"
                }

            }
            if (date=="" || date==null) {
                document.getElementById("dates").innerHTML="<font style='color: red;'>留言时间不能为空！</font>";
            } else {
                document.getElementById("dates").innerHTML="";
                okDate="1"
            }
            if(okName=="1"&&okTel=="1"&&okEmail=="1"&&okDate=="1")
            {
                $.ajax({
                    type: "POST",
                    url: $('#formAction').val(),
                    data: {
                        "name": userName,
                        "phone": userPhone,
                        "email": email,
                        "date": date,
                        "title":title,
                        "contents": contents,
                        "site": $('#siteName').val()
                    },
                    dataType:"json",
                    success: function(data){
                        if (data.success) {alert('留言成功!');}
                    },
                    error: function(msg){
                        alert(msg);
                    }
                });
            }
            //alert("userName="+userName+"***userSex="+userSex+"***userAger="+userAger+"***userTel="+userTel+"***byType="+byType+"***byConter="+byConter+"***inputTime="+inputTime);
        }
        function dataMessage()
        {
            $("#tsMessager").show();
            $("#addMessager").hide();
        }
        function success()
        {
            $("#tsMessager").show();
            $("#addMessager").hide();
        }

    </script>
</head>
<body>
<div class="mian">
    <input type="hidden" id="siteName" value="<%=domain%>"/>
    <input type="hidden" id="formAction" value="/message/site/<%=siteId%>/"/>
    <div class="main_con">
        <div class="right">
            <div class="right_con">
                <div class="right_con_bt">网上留言</div>
                <div class="right_con_nr">
                    <div class="right_con_form">
                        <table  id="tsMessager" width="100%" border="0" cellspacing="0" cellpadding="0" style="display: none">
                            <tr><td id="cgts" height="100"></td></tr>
                        </table>
                        <table id="addMessager" width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td width="80" style="font-size:12px; font-weight:bold; line-height:43px;">姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名：</td>
                                <td width="160"><input name="name" id="userName" type="text" size="40"/></td><td width="20"><font style="color: red">※</font></td><td id="nameTs">&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="font-size:12px; font-weight:bold; line-height:43px;">手机号码：</td>
                                <td><input name="phone" id="phone" type="text" size="40"/></td><td width="20"><font style="color: red">※</font></td>
                                <td  id="phones">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="font-size:12px; font-weight:bold; line-height:43px;">联系邮箱：</td>
                                <td><input name="email" id="email" type="text" size="40"/></td><td width="20"><font style="color: red">※</font></td>
                                <td id="emails">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="font-size:12px; font-weight:bold; line-height:43px;">留言标题：</td>
                                <td><input name="title" id="title" type="text" size="40"/></td><td width="20"><font style="color: red">※</font></td>
                                <td  id="titles">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="font-size:12px; font-weight:bold; line-height:43px;">留言时间：</td>
                                <td><input class="Wdate" name="date" id="date" type="text" size="40" onfocus="WdatePicker({skin:'twoer',minDate:'%y-%M-{%d}',dateFmt:'yyyy-MM-dd HH:mm:ss'})"/></td>
                                <td id="dates">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="font-size:12px; font-weight:bold; line-height:43px;">留言内容</td>
                                <td><textarea id="contents" name="contents" cols="40" rows="5"></textarea></td>
                                <td>&nbsp;</td>
                            </tr>
                            <tr>
                                <td height="50" align="center" colspan="3"><input type="button" value="提交留言信息" onclick="submitData()"/>&nbsp;&nbsp;&nbsp;&nbsp;<input type="reset" value="从新设置"/></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>